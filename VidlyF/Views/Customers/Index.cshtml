@model List<VidlyF.Models.Customer>
@{
	ViewBag.Title = "Customers";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Customers</h2>

@if (Model.Count == 0)
{
	<p>No customers have been registered yet</p>
}
else
{
	<table class="table	table-bordered	table-hover">
		<thead>
			<tr>
				<td>
					<b>Customer Name</b>
				</td>
				<td>
					<b>Discount Rate</b>
				</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var customer in Model)
			{
				<tr>
					<td>
						@Html.ActionLink(customer.Name, "Edit", "Customers", new { customer.Id })
					</td>
					<td>
						@customer.MembershipType.DiscountRate%
					</td>
				</tr>
			}
		</tbody>
	</table>
}
